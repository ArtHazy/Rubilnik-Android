<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_focused="true"
        android:state_pressed="true">
            <shape>
                <solid
                    android:color="@color/greyDark"/>
                <corners
                    android:radius="5dp" />
                <size
                    android:height="70dp"
                    android:width="70dp"/>
            </shape>
    </item>

    <item
        android:state_focused="false"
        android:state_pressed="true">
            <shape>
                <solid
                    android:color="@color/greyDark"/>
                <corners
                    android:radius="5dp" />
                <size
                    android:height="70dp"
                    android:width="70dp"/>
            </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="@color/btnColorOrange"/>
            <corners
                android:radius="5dp" />
            <size
                android:height="70dp"
                android:width="70dp"/>
        </shape>
    </item>
</selector>