<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textMain">
        <item name="fontFamily">@font/font</item>
        <item name="android:layout_marginLeft">38dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textMainRub" parent="textMain">
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:textColor">@color/cineLight</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="textMainAll" parent="textMain">
        <item name="android:layout_marginTop">36sp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="textMainEditText" parent="textMain">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/greyDark</item>
        <item name="android:textSize">21sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/edit_text_bg</item>
    </style>

    <style name="btn" parent="textMainAll" >
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/btn_bg_normal</item>
        <item name="rippleColor">@color/cineDark</item>
    </style>

    <style name="textRegular">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/greyDark</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>