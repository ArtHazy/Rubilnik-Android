<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textMain">
        <item name="fontFamily">@font/font</item>
        <item name="android:layout_marginLeft">38dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textMainRub" parent="textMain">
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:textColor">@color/cineLight</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="textMainAll" parent="textMain">
        <item name="android:layout_marginTop">36sp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="textMainEditText" parent="textMain">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/greyDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textColorHint">"@color/greyHint"</item>
        <item name="android:minWidth">230dp</item>
        <item name="android:maxWidth">230dp</item>
    </style>

    <style name="textRegular">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/greyDark</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="btn" parent="textMainAll" >
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/btn_state</item>
        <item name="android:width">230dp</item>
    </style>

    <style name="swOnOff" parent="textMainAll">
        <item name="android:switchMinWidth">150dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">38dp</item>
        <item name="android:track">@drawable/switch_bg</item>
        <item name="android:thumb">@drawable/custom_thumb</item>
        <item name="android:gravity">center</item>
        <item name="android:showText">false</item>
    </style>
</resources>